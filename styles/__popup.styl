.tingle-modal-box {
    width: auto;
}

.tingle-modal-box__content {
    padding: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    width: auto;
    height: auto;
    //background: $color-gradient;
}


.modal__sent {
    width: 600px;
    max-width: 90vmin;
    background-color: $color-main;
    padding: 60px 50px;
    color: #FDFDFD;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;

    & h2 {
        font-weight: 700;
        font-size: 1.5rem;
        line-height: 157.2%;
        margin-bottom: 10px;
    }

    & h3 {
        font-weight: 700;
        font-size: 2rem;
        line-height: 157.2%;
        color: $color-yellow-dark;

    }


}