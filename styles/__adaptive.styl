@media screen and (max-width: 1449.98px) {
    .header__heading_right img {
        width: 100%;
    }
}

@media screen and (max-width: 1199.98px) {
    html, body {
        font-size: 14px;
    }
    .container {
        max-width: 992px;

    }
    .header__heading_right img {
        right: 0;
    }

    .header__nav {
        background-color: rgba(255,255,255,0.5);
        width: 100vw;
        max-width: 100vw;
        margin: 0;
        height: 50px;
    }

    .header__logo_wrapper {
        height: 50px;
    }

    .header__ul {
        margin-left: 50px;
    }

    .header__link_phone {
        color: $color-main;
    }


}

@media screen and (max-width: 991.98px) {
    .container {
        max-width: 768px;
    }

    .header {
        background: url('../img/header-box.png'), url('../img/header-background-mobile.jpg');
        background-repeat: no-repeat;
        background-position: center right, center center;
        background-size: 50vh, cover;
        padding-bottom: 40px;
        height: auto;
    }

    .header__logo {
        position: relative;
        left: 10px;
    }
    .header__logo_wrapper {
        width: 50px;

    }
    .header__logo_wrapper img {
        height: 28px;
    }

    .header__heading_right {
        display: none;
    }
    .header__heading_left {
        width: 100%;
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .header__location {
        align-self: center;
    }

    .mobile-menu__button {
        display: flex;
    }

    .header__ul {
        display: none;
    }

    .header__h1 {
        margin-left: 0;
    }

    .header__nav {
        width: 100vw;
        max-width: 100vw;
        padding: 0;
        background: rgba(255,255,255,0.5);
        box-shadow: 0 5px 40px rgba(0,0,0,0.25);
        position: fixed;
        top: 0;
        left: 0;
        z-index: 50;

    }


    .header__ul.header__ul_visible {
        display: flex;
        flex-direction: column;
        background-color: $color-lightgray;
        height: 50vh;
        width: 100vw;
        position: fixed;
        right: 0;
        top: 0;
        z-index: 50;
        transition: width 0.4s ease;
        justify-content: space-around;
        align-items: flex-end;
        padding: 50px;
        box-shadow: 0 10px 30px $color-darkgray;
    }

    .header__link_phone {
        color: $color-main;
    }

    .header__link {
        font-size: 2rem;
        background: linear-gradient(to bottom, transparent 0%, transparent 59.9%, $color-yellow-light 60%, $color-yellow-dark 100%);
    }


}

@media screen and (max-width: 767.98px) {
    .container {
        //max-width: 1px;
    }
}

@media screen and (max-width: 575.98px) {
    .container {
        //max-width: 1px;
    }

    .header__link_phone {
        font-size: 1.8rem;
    }
    .header {
        background-size: contain, cover;
    }

    .header__location {
        margin-top: 40px;
    }
}