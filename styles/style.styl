@import '__fonts.styl';
@import 'reset.css';
@import '__variables.styl';
@import '__helpers.styl';
@import '__adaptive.styl';
@import '__popup.styl';


html, body {
  font-size: 16px;
  color: $color-main;
  font-weight: 400;
  margin: 0;
}

body {
  margin: 0;
}

ul, li {
  list-style: none;
}

ul {
  padding-left: 0;
  margin: 0;
}

a {
  text-decoration: none;
}

.header {
  background-image: url('../img/header-background.jpg');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
  //background-size: lenght auto
  //height: 100vmin;
  height: 700px;

  //width: 100%;
}

.header__ul {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.header__ul_right {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

}

.header__li:first-child .header__link {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;

  & .header__image_wrapper {
    width: 100px;
    height: 100px;
    background-color: $color-lightgray;
    display: flex;
    justify-content: center;
    align-items: center;
  }
}

.header__h1 {
  font-weight: 700;
  font-size: 20px;
  color: $color-darkgray;
  margin-left: 15px;
}

.header__link {
  color: $color-darkdarkgray;
  font-size: 16px;
  font-weight: 400;

  &_white {
    font-weight: 700;
    font-size: 18px;
    color: $color-lightgray;
    margin-right: 40px;
  }
}

.header__phone {
  color: #FDFDFD;
}

.header__messanger:not(:last-child) {
  margin-right: 20px;
}

.header__heading_h2 {
  font-weight: 700;
  font-size: 52px;
  line-height: 114.2%;
  margin-top: 125px;
  margin-bottom: 10px;
}

.header__heading_h3 {
  font-weight: 400;
  font-size: 22px;
  line-height: 157.2%;
  margin-bottom: 60px;
}

.button {
  font-weight: 400;
  font-size: 18px;
  line-height: 157.2%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 270px;
  height: 70px;
  color: $color-main;
  box-shadow: 0px 1.13351px 2.74791px rgba(255, 235, 0, 0.0310018), 0px 2.86674px 6.94968px rgba(255, 235, 0, 0.0443709), 0px 5.84789px 14.1767px rgba(255, 235, 0, 0.0556291), 0px 12.0455px 29.2013px rgba(255, 235, 0, 0.0689982), 0px 33px 80px rgba(255, 235, 0, 0.1);
  background: $color-gradient;
  outline: none;
  border: none;

}

.header__heading {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

  &_left, &_right {
    width: 50%;
  }

  &_right {
    & img {
      position: relative;
      bottom: -15px;
      right: 55px;
    }
  }

}

.advantages {
  background-color: #fff;
  padding-top: $section-padding;
  padding-bottom: $section-padding;
}

.section__heading {
  font-weight: 700;
  font-size: 38px;
  line-height: 212.56%;
  margin-bottom: 0;
}

.section__subheading {
  font-weight: 400;
  font-size: 22px;
  line-height: 157.2%;
  margin-bottom: 50px;
  margin-top: 0;
}


.advantages__list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
}

.advantages__item {
  width: 31%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 37px;
}

.advantages__icon {
  min-width: 88px;
  min-height: 88px;
  background-color: $color-lightgray;
  display: flex;
  justify-content: center;
  align-items: center;
}

.advantages__text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  margin-left: 25px;
}

.advantages__heading {
  font-weight: 700;
  font-size: 20px;
  line-height: 157.2%;
  color: $color-main;
  margin-bottom: 2px;
  margin-top: 0;

}

.advantages__description {
  font-weight: 400;
  font-size: 18px;
  line-height: 157.2%;
  color: #242424;
  margin-top: 0;
  margin-bottom: 0;
}

.clear {
  background-color: $color-lightgray;
  padding-top: $section-padding;
  padding-bottom: $section-padding;
}

.clear__list {
  display: flex;
  flex-direction: row;
  justify-content: space-between;

}

.clear__item {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  width: 182px;


}

.clear__gradient {
  width: 182px;
  height: 128px;
  background: $color-gradient;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.clear__image {
  background-color: $color-lightgray;
  width: 172px;
  height: 118px;
  position: absolute;
  top: 5px;
  left: 5px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;

  & img {
    position: relative;
    //z-index: 2;

  }
}

.clear__item:nth-child(1) .clear__image img {
  top: 5px;
}
.clear__item:nth-child(2) .clear__image img {
  top: 15px;
}
.clear__item:nth-child(3) .clear__image img {
  top: 15px;
}
.clear__item:nth-child(4) .clear__image img {
  top: 12px;
}
.clear__item:nth-child(5) .clear__image img {
  top: 12px;
}
.clear__item:nth-child(6) .clear__image img {
  top: 8px;
}

.clear__description {
  display: flex;
  width: 100%;
  margin-top: 30px;
  font-size: 18px;
  line-height: 157.2%;
}

.quiz {
  padding-top: $section-padding;
  padding-bottom: $section-padding;
}

.quiz__form {
  //height: 716px;
  border: 10px solid;
  border-image: $color-gradient 60 30;
  background: linear-gradient(rgba(255,255,255,0.9), rgba(255,255,255,0.9)), url('../img/quiz-background.jpg') no-repeat center center;
  background-size: cover;
  padding: 100px 180px;
}

.quiz__heading {
  font-weight: 700;
  font-size: 38px;
  line-height: 212.56%;
  text-align: center;
  margin-top: 0;
  margin-bottom: 0;
}

.quiz__subheading {
  font-weight: 400;
  font-size: 22px;
  line-height: 212.56%;
  text-align: center;
  margin-top: 0;
  margin-bottom: 60px;
}

.quiz__counter {
  font-weight: 700;
  font-size: 18px;
  line-height: 123.7%;
  color: $color-gray;
  margin-top: 0;
  margin-bottom: 20px;
}

.quiz__question {
  font-weight: 700;
  font-size: 22px;
  line-height: 123.7%;
  margin-top: 0;
  margin-bottom: 45px;
}

.quiz__inputs {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.quiz__column {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.quiz__label {
  font-weight: 400;
  font-size: 18px;
  line-height: 212.56%;
  margin-bottom: 5px;
}

.quiz__input_number {
  //border-width: 2px;
  //border-style: solid;
  border: 2px solid $color-yellow-dark;
  padding-left: 15px;
  color: $color-main;
  font-size: 16px;
  //border-image: $color-gradient 30 30;

  height: 50px;
  width: 225px;
  margin-bottom: 10px;
}

.button_arrow {
  margin-top: 70px;
  cursor: pointer;
}

.quiz__checkbox {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.quiz__label_checkbox {
  font-weight: 400;
  font-size: 14px;
  line-height: 212.56%;
  margin-left: 10px;
}