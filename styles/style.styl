.swiper-container {
    width: 100%;
    height: 100%;
    padding-right: 5px;
    padding-left: 5px;
}

.swiper-slide {
    text-align: center;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
}

.swiper-slide {
    height: 400px;
    position: relative;
    margin-top: 5px;
    margin-bottom: 5px;
    overflow: visible;

    &::before {
        content: '';
        position: absolute;
        background: $color-gradient;
        left: -5px;
        bottom: -5px;
        width: 150px;
        height: 150px;
        z-index: 5;
        overflow: visible;
    }

    &::after {
        content: '';
        position: absolute;
        background: $color-gradient;
        right: -5px;
        top: -5px;
        width: 150px;
        height: 150px;
        z-index: 5;
        overflow: visible;
    }

    &:hover, &:focus {
        cursor: grab;
    }

    & img {
        object-fit: cover;
        width: 100%;
        height: 100%;
        z-index: 6;
    }
}

.gallery__buttons {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}

.gallery__button {
    width: 67px;
