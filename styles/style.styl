.mobile-menu__button {
    width: 30px;
    height: 3px;
    background-color: $color-yellow-dark;
    display: none;
    position: fixed;
    top: 25px;
    right: 25px;
    border-radius: 10px;
    z-index: 51;


    &::before {
        content: '';
        width: 30px;
        height: 3px;
        background-color: $color-yellow-dark;
        position: absolute;
        left: 0;
        top: -9px;
        border-radius: 10px;
    }

    &::after {
        content: '';
        width: 30px;
        height: 3px;
        background-color: $color-yellow-dark;
        position: absolute;
        left: 0;
        top: 9px;
        border-radius: 10px;
    }

    &_opened {
        background-color: transparent;
        box-shadow: none;

        &::before {
            transform: rotate(-45deg);
            transition: all 0.4s ease;
            top: 0;
            box-shadow: none;
        }

        &::after {
            transform: rotate(45deg);
            transition: all 0.4s ease;
            top: 0;
            box-shadow: none;
        }
    }
}

